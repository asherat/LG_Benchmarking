#!/bin/bash

if [ $# -ne 1 ]  ; then
	echo "USAGE:$0 [1=Squid; 2=GE]"
	exit 2
fi

if [ $1 -eq 1 ] ; then
	echo "Clearing squid cache"
	/home/lg/bin/lg-sudo-bg "service squid3 stop; rm -Rf /var/spool/squid3/*; squid3 -z; service squid3 start"
elif [ $1 -eq 2 ] ; then
	/home/lg/bin/lg-run rm /home/lg/.googleearth/Cache -R
	killall googleearth-bin
else
	echo "USAGE:$0 [1=Squid; 2=GE]"
fi
